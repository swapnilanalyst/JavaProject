package test2;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

public class Testing2 {

	public static void main(String[] arg) {
		
		WebDriver driver = new ChromeDriver();
		driver.get("https://app.salesninjacrm.com/login");
		driver.manage().window().maximize();
		
		WebDriverWait wait = new WebDriverWait(driver, Duration.ofSeconds(10));
		
		WebElement logo = driver.findElement(By.xpath("//img[@alt='Logo']"));
		logo.isDisplayed();
		
		WebElement userName = wait.until(ExpectedConditions.visibilityOfElementLocated(
			    By.xpath("//input[@data-tooltip-id='my-tooltip-login-1']")));
		userName.clear();
		userName.sendKeys("support@redvisionglobal.com");
		
		WebElement pass = driver.findElement(By.xpath("(//div/input[@data-tooltip-id='my-tooltip-login-2'])[1]"));
		pass.clear();
		pass.sendKeys("Redv@123");
		
		WebElement signIn = driver.findElement(By.xpath("//button[@type='submit']"));
		signIn.click();
		
	}

	public void login() {

		
	}

}
