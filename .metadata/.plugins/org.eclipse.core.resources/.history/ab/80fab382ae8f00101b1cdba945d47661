package test2;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import test1.Testing1;

public class Testing2 {
	
	WebDriver driver;
	WebDriverWait wait;

	public static void main(String[] arg) {
		
		Testing2 obj = new Testing2();
		Testing1 obj2= new Testing1();
		obj2.dashboard();
		
		obj.setup();
		obj.openLoginPage();
		obj.verifyLogo();
		obj.userName();
		obj.pass();
		obj.signIn();
		obj.errorCode();
		
		
		
		
	}
	public void verifyLogo() {
		WebElement logo = wait.until(ExpectedConditions.visibilityOfElementLocated(
				By.xpath("//img[@alt='Logo']")));
		System.out.println("Logo displayed: " + logo.isDisplayed());
	}
	
	public void setup() {
		driver = new ChromeDriver();
		wait = new WebDriverWait(driver, Duration.ofSeconds(10));
		driver.manage().window().maximize();
	}

	public void openLoginPage() {
		driver.get("https://app.salesninjacrm.com/login");
	}

	public void userName () {
		
		WebElement userName = wait.until(ExpectedConditions.visibilityOfElementLocated(
			    By.xpath("//input[@data-tooltip-id='my-tooltip-login-1']")));
		userName.clear();
		userName.sendKeys("support@redvisionglobal.com");
		
	}
	public void pass () {
		
		WebElement pass = driver.findElement(By.xpath("(//div/input[@data-tooltip-id='my-tooltip-login-2'])[1]"));
		pass.clear();
		pass.sendKeys("Redv@1235");
		
	}
	public void signIn() {
		
		WebElement signIn = driver.findElement(By.xpath("//button[@type='submit']"));
		signIn.click();
		
	}
	public void errorCode() {
		
		WebElement errorCode = driver.findElement(By.xpath("(//div[@class=\"alert alert-danger fade show\"]))"));
		errorCode.isDisplayed();
		
	}

}
